    "version": "0.2.0",
    "configurations": [
        {
            "name": "socket",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "preLaunchTask": "pre-debug",
            "program": "${workspaceFolder}/cmd/launcher",
            "args": [
                "socket",
                "--path=/tmp/osq.sock",    
            ],
            // uncomment below if you need root
            // "asRoot": true,
            // "console": "integratedTerminal",
        },
        {
            "name": "k2",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "preLaunchTask": "pre-debug",
            "program": "${workspaceFolder}/cmd/launcher",
            "args": [
                "--debug",
                "--hostname=localhost:3443",
                "--control",
                "--control_hostname=localhost:3443",
                "--enroll_secret_path=${workspaceFolder}/k2_enroll_secret",
                "--transport=jsonrpc",
                "--osqueryd_path=/tmp/launcher-root-dev/bin/osqueryd",
                "--root_directory=/tmp/launcher-root-dev",
                "--root_pem=${workspaceFolder}/localhost.crt",
                "--autoupdate",
                "--autoupdater_initial_delay=0s",
                "--autoupdate_interval=1s"
            ],
            // uncomment below if you need root
            // "asRoot": true,
            // "console": "integratedTerminal",
        },
    ]
}
